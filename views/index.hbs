<body>

<!-- Just an image -->
<nav class="navbar navbar-dark bg-dark">
	<a class="navbar-brand" href="#">
		<img src="images/logo.png" alt="">
	</a>
</nav>


<div class="noauthtoken alert alert-danger alert-dismissible fade show " , style="display:none" role="alert">
	<strong>Invalid input: </strong> Please provide an authentication token.
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>


<div class="noendpoint alert alert-danger alert-dismissible fade show " , style="display:none" role="alert">
	<strong>Invalid input: </strong> Please provide an endpoint (ex: http://localhost/external/exams).
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
	<li class="nav-item">
		<a class="nav-link active" id="api-tab" data-toggle="tab" href="#api-content" role="tab" aria-controls="home"
		   aria-selected="true">API Options</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" id="demo-tab" data-toggle="tab" href="#demo-tab-content" role="tab" aria-controls="profile"
		   aria-selected="false">Demo</a>
	</li>

</ul>
<!-- `tab content -->
<div class="tab-content" id="tabContent">
	<div class="tab-pane fade show active" id="api-content" role="tabpanel" aria-labelledby="api-tab">
		<div id="accordion">
			<div class="card">
				<div class="card-header" id="headingTwo">
					<h5 class="mb-0">
						<button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo"
						        aria-expanded="false" aria-controls="collapseTwo">
							Options
						</button>
					</h5>
				</div>
				<div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordion">
					<div class="card-body">
						<div class="form-group">
							<label for="token">Authentication token</label>
							<input type="email" class="form-control" id="authToken" aria-describedby="emailHelp"
							       placeholder="Authentication token"
							       value="PaVfsJiw2ApTxTSjox2MDafFjVFJNs1GhE1oICsioxEPhO0OVH36BDf0dcOJlA5AbceYCPY83Oncl72bcOSEqmJNwDf4plYcxN7hIwoC6uD1xHQhiCXB40Tddi1eHZ4PxHTjxO5rytW3fhVUcPgqSVNE6VlPrISJhwNfNay0TME1zX6n5hV2dyJngO0uuoyGbkLNazEafAfzB0vAQqmPvqWJXiaBVi1rQDRROHdv2EXoTlSARIQ38pR0nPfGcuzR">
						</div>
						<div class="form-group">
							<label for="endpoint">Endpoint</label>
							<input type="text" class="form-control" id="endpoint" placeholder="Endpoint"
							       value="http://localhost:3000">
						</div>
						<div class="form-check">
							<input type="checkbox" class="form-check-input" id="debugMode">
							<label class="form-check-label" for="debugMode">Debug mode?</label>
						</div>
					</div>
				</div>
				<div style="width: 200px;padding:16px">
					<button id="setOptions" type="button" class="btn btn-primary">Set options</button>
				</div>
			</div>
		</div>

	</div>
	<div class="tab-pane fade" id="demo-tab-content" role="tabpanel" aria-labelledby="demo-tab">
		<h1>Demo 1 - Default rendering</h1>
		<hr />
		<button type="button" class="btn btn-primary getAllExams">
			Get all exams
		</button>
		<hr />
		<div id="examContainer"></div>
	</div>

</div>

